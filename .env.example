# ==========================
# IdeaCapital Environment Variables
# Copy this to .env and fill in values
# ==========================

# ---- Firebase / GCP ----
GOOGLE_CLOUD_PROJECT=ideacapital-dev
FIREBASE_PROJECT_ID=ideacapital-dev
GCLOUD_SERVICE_ACCOUNT_KEY=./service-account.json

# ---- Blockchain ----
RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_KEY
CHAIN_ID=80001
DEPLOYER_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
USDC_CONTRACT_ADDRESS=0x_USDC_ADDRESS

# ---- The Vault (Rust) ----
VAULT_PORT=8080
VAULT_DATABASE_URL=postgres://user:pass@localhost:5432/ideacapital
VAULT_REDIS_URL=redis://localhost:6379
VAULT_SHARED_SECRET=your-hmac-shared-secret-here

# ---- The Brain (Python AI) ----
BRAIN_PORT=8081
VERTEX_AI_PROJECT=ideacapital-dev
VERTEX_AI_LOCATION=us-central1
GOOGLE_PATENTS_API_KEY=YOUR_KEY
SERPAPI_KEY=YOUR_SERPAPI_KEY
PINECONE_API_KEY=YOUR_KEY
PINECONE_INDEX=inventions

# ---- Pub/Sub Topics ----
PUBSUB_TOPIC_INVENTION_CREATED=invention.created
PUBSUB_TOPIC_INVESTMENT_PENDING=investment.pending
PUBSUB_TOPIC_INVESTMENT_CONFIRMED=investment.confirmed
PUBSUB_TOPIC_AI_PROCESSING=ai.processing
PUBSUB_TOPIC_PATENT_STATUS=patent.status.updated

# ---- Frontend (Flutter Web) ----
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ---- IPFS ----
PINATA_API_KEY=YOUR_KEY
PINATA_SECRET_KEY=YOUR_SECRET
